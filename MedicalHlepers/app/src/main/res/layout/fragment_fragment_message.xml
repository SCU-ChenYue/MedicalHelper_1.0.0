<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical"
    tools:context="com.example.medicalhlepers.ThreeMainFragment.FragmentMessage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/record_head"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:id="@+id/lll_search">

                    <LinearLayout
                        android:id="@+id/ll_search"
                        android:layout_width="399dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="3dp"
                            android:src="@drawable/icon_search"
                            android:layout_gravity="bottom"/>

                        <TextView
                            android:id="@+id/search_hospital"
                            android:layout_width="343dp"
                            android:layout_height="30dp"
                            android:layout_alignBottom="@+id/ll_search"
                            android:layout_marginLeft="3dp"
                            android:hint="搜索医院"
                            android:textColor="#000000"
                            android:background="@drawable/bg_second"
                            android:gravity="center_vertical"
                            android:layout_gravity="bottom"/>

                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    android:paddingTop="15dp">

                    <TextView
                        android:id="@+id/tv_saoma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/icon_saoma"
                        android:drawablePadding="6dp"
                        android:gravity="center"
                        android:text="扫一扫"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_guahao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/qitake"
                            android:drawablePadding="6dp"
                            android:gravity="center"
                            android:text="名医挂号"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_yihu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/shangmen"
                            android:drawablePadding="6dp"
                            android:gravity="center"
                            android:text="专家问诊"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <include layout="@layout/index_home_list4" />

            <View
                android:layout_width="match_parent"
                android:layout_height="13dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="推荐医院"
                    android:background="@color/white"
                    android:layout_marginLeft="20dp"
                    android:textColor="#1296DB"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <ListView
        android:id="@+id/list_view5"
        android:layout_width="match_parent"
        android:layout_height="272dp"></ListView>
</LinearLayout>