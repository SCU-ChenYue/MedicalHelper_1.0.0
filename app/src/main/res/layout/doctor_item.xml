<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageView8"
            android:layout_width="69dp"
            android:layout_height="77dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            fresco:roundAsCircle="true"
            fresco:roundingBorderWidth="1dp"
            android:src="@mipmap/doc1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="张传外"
            android:textSize="16sp"
            android:textColor="#000000"
            android:id="@+id/textView21"
            android:layout_alignTop="@+id/imageView8"
            android:layout_toRightOf="@+id/imageView8"
            android:layout_toEndOf="@+id/imageView8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="主任医师"
            android:textColor="#1296DB"
            android:textSize="13sp"
            android:id="@+id/textView22"
            android:layout_alignBottom="@+id/textView21"
            android:layout_toRightOf="@+id/textView21"
            android:layout_toEndOf="@+id/textView21" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView21"
            android:layout_alignLeft="@+id/textView21"
            android:layout_alignBottom="@+id/imageView8"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="30dp"
            android:text="四川大学华西医院"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView23"
            android:layout_alignLeft="@+id/textView23"
            android:layout_alignTop="@+id/textView23"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="23dp"
            android:text="乳腺外科专科门诊"
            android:textColor="#333333"
            android:textSize="13sp" />
    </RelativeLayout>
</LinearLayout>