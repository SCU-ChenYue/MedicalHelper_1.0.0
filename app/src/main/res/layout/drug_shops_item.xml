<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/drug_shop_item_draweeview"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_leo_loading" />

    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="西药"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView27"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/textView27"
                android:layout_toRightOf="@+id/textView27"
                android:text="100片/瓶"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/drug_shop_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView32"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/textView32"
                android:layout_toRightOf="@+id/textView32"
                android:text="￥12.48"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/drug_shop_item_price"
                android:layout_toEndOf="@+id/drug_shop_item_price"
                android:layout_toRightOf="@+id/drug_shop_item_price"
                android:text="元" />

            <TextView
                android:id="@+id/drug_shop_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView27"
                android:layout_alignStart="@+id/textView27"
                android:layout_alignLeft="@+id/textView27"
                android:layout_marginBottom="2dp"
                android:text="复方颗粒"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView27"
                android:layout_alignStart="@+id/textView27"
                android:layout_alignLeft="@+id/textView27"
                android:text="通用名：复方片"
                android:textColor="#333333"
                android:textSize="12sp" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/drug_shop_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:text="×2"
        android:textSize="20sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/drug_shop_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="6dp"
        android:src="@drawable/shanchu" />

</LinearLayout>