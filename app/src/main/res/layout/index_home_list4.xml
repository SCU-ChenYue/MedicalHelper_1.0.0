<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="12"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/imageview_jbzz"
            android:layout_width="40dp"
            android:layout_gravity="center"
            android:layout_height="48dp"
            android:src="@mipmap/home_jia" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:text="药品购买" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/findhos1"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_gravity="center"
            android:layout_height="48dp"
            android:src="@mipmap/findho" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:text="全部医院" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/finddoc"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_gravity="center"
            android:layout_height="48dp"
            android:src="@mipmap/finddoc"
            android:id="@+id/findddoc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:text="专家问诊" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_yygh"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_gravity="center"
            android:layout_height="48dp"
            android:src="@mipmap/homeyuyue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:text="查看预约" />

    </LinearLayout>

</LinearLayout>